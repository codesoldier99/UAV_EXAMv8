/* 小程序首页样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.welcome {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
}

.login-btn text {
  color: #fff;
  font-size: 28rpx;
}

/* 章节标题 */
.section-title {
  color: #262626;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 系统统计 */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s ease;
}

.stat-item:active {
  transform: scale(0.98);
}

.stat-value {
  display: block;
  color: #262626;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-value.active {
  color: #52c41a;
}

.stat-value.waiting {
  color: #fa8c16;
}

.stat-label {
  color: #8c8c8c;
  font-size: 24rpx;
}

/* 快速操作 */
.quick-actions {
  margin-bottom: 40rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.action-name {
  color: #262626;
  font-size: 26rpx;
  text-align: center;
}

/* 系统公告 */
.announcements {
  margin-bottom: 40rpx;
}

.announcement-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.announcement-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-item:active {
  background-color: #fafafa;
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.announcement-title {
  color: #262626;
  font-size: 30rpx;
  font-weight: bold;
}

.announcement-type {
  background-color: #ff4d4f;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.announcement-content {
  color: #595959;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: block;
}

.announcement-time {
  color: #bfbfbf;
  font-size: 24rpx;
}

/* 底部提示 */
.bottom-tips {
  text-align: center;
  padding: 40rpx 20rpx;
}

.tip-text {
  color: #bfbfbf;
  font-size: 24rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-content text {
  color: #595959;
  font-size: 28rpx;
}