/* 考生登录页面样式 */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 登录头部 */
.login-header {
  text-align: center;
  padding: 60rpx 0;
  color: white;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 登录表单 */
.login-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.loading {
  background: #ccc;
}

.login-btn:not(.loading):active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.quick-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.quick-btn.demo {
  background: #e6f7ff;
  color: #1890ff;
  border: 2rpx solid #91d5ff;
}

.quick-btn.clear {
  background: #fff7e6;
  color: #fa8c16;
  border: 2rpx solid #ffd591;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 登录说明 */
.login-tips {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  width: 40rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部帮助 */
.bottom-help {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.help-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.help-btn:active {
  background: rgba(255, 255, 255, 0.25);
}

.help-icon {
  font-size: 28rpx;
}

.help-text {
  font-size: 22rpx;
}

/* 版权信息 */
.footer {
  text-align: center;
  margin-top: auto;
  padding-top: 30rpx;
}

.footer-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}