/* 考场状态页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

.summary {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 10rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
}

.refresh-bar {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.refresh-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.venues-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.venue-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  transition: transform 0.2s;
}

.venue-card:active {
  transform: scale(0.98);
}

.venue-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.venue-info {
  flex: 1;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.venue-type {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.venue-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
}

.venue-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  min-width: 200rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 120rpx;
  color: #999;
  font-size: 28rpx;
}
