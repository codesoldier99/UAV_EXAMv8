/* 个人中心页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 考生用户档案 */
.profile-card {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 16rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar-section {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.avatar.staff {
  background: linear-gradient(135deg, #52c41a, #73d13d);
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id,
.user-role {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.user-status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-dot.active {
  background: #52c41a;
}

.qr-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}

.qr-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

/* 信息卡片 */
.info-card,
.schedule-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-list {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.copy-btn {
  background: #f0f8ff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
}

/* 考试安排 */
.schedule-list {
  space: 20rpx;
}

.schedule-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border-left: 6rpx solid #1890ff;
}

.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.schedule-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.schedule-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.schedule-details {
  space: 12rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  width: 32rpx;
}

.detail-text {
  font-size: 26rpx;
  color: #666;
}

.empty-schedule {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 工作人员功能 */
.staff-functions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.function-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.function-grid {
  display: flex;
  justify-content: space-around;
}

.function-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  min-width: 200rpx;
}

.function-item:active {
  background: #e6f7ff;
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.function-text {
  font-size: 28rpx;
  color: #333;
}

/* 未登录状态 */
.welcome-card {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 40rpx;
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.welcome-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.login-options {
  space: 20rpx;
}

.login-option {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.login-option.candidate {
  border-left: 6rpx solid #1890ff;
}

.login-option.staff {
  border-left: 6rpx solid #52c41a;
}

.option-icon {
  font-size: 64rpx;
  margin-bottom: 15rpx;
}

.option-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.option-desc {
  font-size: 26rpx;
  color: #666;
}

/* 通用功能区域 */
.common-functions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.function-list {
  space: 0;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background: #f5f5f5;
}

.function-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.function-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 二维码弹窗 */
.qr-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-content {
  background: white;
  border-radius: 20rpx;
  padding: 0;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
}

.qr-header {
  background: #1890ff;
  color: white;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.qr-title {
  font-size: 36rpx;
  font-weight: bold;
}

.qr-close {
  background: none;
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-body {
  padding: 40rpx;
  text-align: center;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 30rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
}

.qr-loading {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

.qr-info {
  space: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.refresh-qr {
  background: #f0f8ff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
}