      },
      {
        "pagePath": "pages/checkin/checkin",
        "text": "扫码签到",
        "iconPath": "images/checkin.png",
        "selectedIconPath": "images/checkin-active.png"
      },
      {
        "pagePath": "pages/profile/profile",
        "text": "我的",
        "iconPath": "images/profile.png",
        "selectedIconPath": "images/profile-active.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 10000,
    "downloadFile": 10000
  },
  "permission": {
    "scope.camera": {
      "desc": "扫描考场二维码需要使用摄像头"
