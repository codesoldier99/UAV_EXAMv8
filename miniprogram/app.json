    "pages/checkin/checkin",
    "pages/profile/profile",
    "pages/candidate-login/candidate-login"
  ],
  "window": {
    "backgroundColor": "#F8F9FA",
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#1890FF",
